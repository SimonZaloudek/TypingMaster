<UserControl x:Class="TypingMasterCore.MainMenuControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypingMasterCore.MainMenuControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="450">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-70" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF1D1D1D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="/Assets/typingMasterLogo.png" VerticalAlignment="Top" Width="420" Grid.ColumnSpan="3" Height="90" Margin="0,15,0,0" HorizontalAlignment="Center" Stretch="Fill"/>

        <Button Grid.Row="1" Content="PLAY" FontFamily="Century Gothic" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="200" Click="Button_Click" BorderThickness="1,1,3,3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF2A2A2A" Offset="0"/>
                    <GradientStop Color="DimGray" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" Content="HELP" FontFamily="Century Gothic" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="200" Click="Button_Click_1" BorderThickness="1,1,3,3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="DimGray"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Row="3" Content="EDITOR" FontFamily="Century Gothic" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="200" Click="Button_Click_2" BorderThickness="1,1,3,3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="DimGray"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Row="4" Content="EXIT" FontFamily="Century Gothic" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="200" Click="Button_Click_3" BorderThickness="1,1,3,3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="DimGray"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
